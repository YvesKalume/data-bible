<table width="100%">
  <tr class="chapter-nav">
    <td>
      <%- if @chapter.number != 1 %>
        <a href="<%= chapter_read_path(@book.number, @chapter.number - 1) %>">&lt; <%= t 'previous' %></a>
      <%- end %>
    </td>
    <td align="right">
      <%- if @chapter.number != @book.chapters.size %>
        <a href="<%= chapter_read_path(@book.number, @chapter.number + 1) %>"><%= t 'next' %> &gt;</a>
      <%- end %>
    </td>
  </tr>
</table>
