<form class="content" action="<%= set_version_path %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%- @available_versions.each do |version| %>
    <p>
    <label>
      <input type="radio" name="version_id" value="<%= version.id %>"/>
      <%= version.name %> (<%= version.slug %>)
    </label>
    </p>
  <%- end %>
  <input type="submit" value="Choose" />
</form>
